import pandas as pd
import random

# Генерируем данные
lst = ['robot'] * 10
lst += ['human'] * 10
random.shuffle(lst)
data = pd.DataFrame({'whoAmI':lst})

# Создаем one-hot encoding
one_hot_data = pd.DataFrame()
one_hot_data['human'] = data['whoAmI'].map({'human': 1, 'robot': 0})
one_hot_data['robot'] = data['whoAmI'].map({'human': 0, 'robot': 1})

# Печатаем результат
print(one_hot_data.head())
